{
	"name": "mastrero",
	"version": "0.1.1",
	"description": "Repo for my portfolio",
	"private": true,
	"dependencies": {
		"@babel/preset-react": "^7.10.4",
		"emailjs-com": "^2.6.3",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-scripts": "3.4.3",
		"styled-components": "^5.1.1"
	},
	"scripts": {
		"lint": "cd src && eslint --ext .jsx,.js Components/**/* Styles/** UI/**",
		"format": "prettier --write 'lib/**/*.js' 'bin/**/*.js'",
		"format:ci": "prettier --check 'lib/**/*.js' 'bin/**/*.js'",
		"start:client": "react-scripts start",
		"start:server": "netlify-lambda serve src/lambda",
		"start": "npm-run-all --parallel start:client start:server",
		"build:client": "react-scripts build",
		"build:server": "netlify-lambda build src/lambda",
		"build": "npm-run-all --parallel build:**",
		"prebuild": "netlify-lambda install"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"netlify-lambda": "^2.0.1",
		"npm-run-all": "^4.1.5"
	}
}
